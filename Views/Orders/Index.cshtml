@model IEnumerable<TZVersta.Models.Order>

<h2>Orders</h2>

<table class="table">
    <thead>
        <tr>
            <th>Номер заказа</th>
            <th>Город отправителя</th>
            <th>Город получателя</th>
            <th>Вес груза</th>
            <th>Дата забора груза</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="details">

                <td>@item.OrderNumber</td>
                <td>@item.SenderCity</td>
                <td>@item.RecipientCity</td>
                <td>@item.Weight</td>
                <td>@item.PickupDate</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Детали</a>
                </td>

            </tr>
        }
    </tbody>
</table>