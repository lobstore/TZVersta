@model TZVersta.Models.Order
<h2>Create Order</h2>
<form asp-action="Create">
    <div class="inputfield form-group">
        <label asp-for="SenderCity" ></label>
        <input asp-for="SenderCity" class="form-control" />
    </div>
    <div class="inputfield form-group">
        <label asp-for="SenderAddress"></label>
        <input asp-for="SenderAddress" class="form-control" />
    </div>
    <div class="inputfield form-group">
        <label asp-for="RecipientCity"></label>
        <input asp-for="RecipientCity" class="form-control" />
    </div>
    <div class="inputfield form-group">
        <label asp-for="RecipientAddress"></label>
        <input asp-for="RecipientAddress" class="form-control" />
    </div>
    <div class="inputfield form-group">
        <label asp-for="Weight"></label>
        <input asp-for="Weight" class="form-control" />
    </div>
    <div class="inputfield form-group">
        <label asp-for="PickupDate"></label>
        <input asp-for="PickupDate" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>